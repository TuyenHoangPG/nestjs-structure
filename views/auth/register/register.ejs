<div class="box">
  <div class="content registerBox" style="display:none;">
    <div class="form">
      <form method="post" html="{:multipart=>true}" data-remote="true" action="auth/register-local" accept-charset="UTF-8">
        <input id="email" class="form-control" type="text" placeholder="Email" name="email" required>
        <input id="first-name" class="form-control" type="text" placeholder="First Name" name="firstName" required>
        <input id="last-name" class="form-control" type="text" placeholder="Last Name" name="lastName" required>
        <input id="password" class="form-control" type="password" placeholder="Password" name="password" required>
        <input id="password-confirmation" class="form-control" type="password" placeholder="Repeat Password"
          name="passwordConfirmation" required>
        <button type="submit" class="btn btn-default btn-register">Register</button>
      </form>
    </div>
  </div>
</div>