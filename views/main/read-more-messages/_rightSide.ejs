<% oldMessages.forEach(function(message) { %>
  <% if (message.messageType === 'text') { %>
    <div class="convert-emoji bubble <% if (message.senderId == user._id) { %> me <% } else { %> you <% } %>" data-mess-id="<%= message._id %>">
      <% if (isChatInGroup) { %>
        <img src="/images/users/<%= message.sender.avatar %>" alt="avatar" class="avatar-small" title="<%= message.sender.name %>">
      <% } %>
      <%= message.text %>
    </div>
  <% } else if (message.messageType === 'image') { %>
    <div class="bubble bubble-image-file <% if (message.senderId == user._id) { %> me <% } else { %> you <% } %>" data-mess-id="<%= message._id %>">
      <% if (isChatInGroup) { %>
        <img src="/images/users/<%= message.sender.avatar %>" alt="avatar" class="avatar-small" title="<%= message.sender.name %>">
      <% } %>
      <img src="data:<%= message.file.contentType %>; base64, <%= convertBufferToBase64(message.file.data) %>" class="show-image-chat">
    </div>
  <% } else if (message.messageType === 'file') { %>
    <div class="bubble bubble-attachment-file <% if (message.senderId == user._id) { %> me <% } else { %> you <% } %>" data-mess-id="<%= message._id %>">
      <% if (isChatInGroup) { %>
        <img src="/images/users/<%= message.sender.avatar %>" alt="avatar" class="avatar-small" title="<%= message.sender.name %>">
      <% } %>
      <a href="data:<%= message.file.contentType %>; base64, <%= convertBufferToBase64(message.file.data) %>" download="<%= message.file.fileName %>">
        <%= message.file.fileName %>
      </a>
    </div>
  <% } %>
<% }) %>
